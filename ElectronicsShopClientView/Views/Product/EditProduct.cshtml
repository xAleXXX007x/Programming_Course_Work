@using ElectronicsShopBusinessLogic.Enums
@model ElectronicsShopClientView.Models.ProductModel

@{
    ViewData["Title"] = "Создать товар";
}

<h1>@ViewData["Title"]</h1>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <p>Название: @Html.EditorFor(x => x.Name)</p>
    <p>Категория: @Html.DropDownListFor(rec => rec.ProductCategory, Html.GetEnumSelectList<ProductCategory>())</p>
    <p>Описание: @Html.EditorFor(x => x.Desc)</p>
    <p>Цена: @Html.EditorFor(x => x.Price)</p>
    @Html.HiddenFor(x => x.Id)
    <button type="submit">Создать</button>
}